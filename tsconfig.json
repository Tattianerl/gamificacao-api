{
  "compilerOptions": {
    "target": "ES2022",                      
    "module": "commonjs",                    
    "outDir": "dist",                        
    "rootDir": "src",                        
    "strict": true,                          
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                    
    "resolveJsonModule": true,              
    "sourceMap": false,                      
    "noUnusedLocals": true,                  
    "noUnusedParameters": false,             
    "noFallthroughCasesInSwitch": true,      
    "incremental": true                      
  },
  "include": ["src"],                        
  "exclude": ["node_modules", "dist"]       
}

